<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/calculatorPaddingBottom"
    android:paddingLeft="@dimen/calculatorPaddingLeft"
    android:paddingRight="@dimen/calculatorPaddingRight"
    android:paddingTop="@dimen/calculatorPaddingTop"
    android:background="@color/calculatorBackground"
    tools:context=".WearActivity"
    tools:deviceIds="wear_square">

    <LinearLayout style="@style/outputLayout">
        <TextView
            android:id="@+id/outputView"
            style="@style/outputView" />
    </LinearLayout>

    <LinearLayout style="@style/calculatorButtonRow"
        android:layout_marginTop="@dimen/calculatorPaddingTop">


        <Button
            android:id="@+id/seven"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_7" />

        <Button
            android:id="@+id/eight"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_8" />

        <Button
            android:id="@+id/nine"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_9" />


        <Button
            android:id="@+id/divide"
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/divide" />

        <Button
            android:id="@+id/ac"
            style="@style/redButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/ac" />

    </LinearLayout>


    <LinearLayout style="@style/calculatorButtonRow"
        android:layout_marginTop="@dimen/calculatorPaddingTop">


        <Button
            android:id="@+id/four"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_4" />

        <Button
            android:id="@+id/five"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_5" />

        <Button
            android:id="@+id/six"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_6" />


        <Button
            android:id="@+id/multiply"
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/x" />

        <Button
            android:id="@+id/equals"
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/equals" />


    </LinearLayout>


    <LinearLayout style="@style/calculatorButtonRow"
        android:layout_marginTop="@dimen/calculatorPaddingTop">


        <Button
            android:id="@+id/one"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_1" />

        <Button
            android:id="@+id/two"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_2" />

        <Button
            android:id="@+id/three"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_3" />


        <Button
            android:id="@+id/minus"
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/minus" />

        <Button
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick" />

    </LinearLayout>


    <LinearLayout style="@style/calculatorButtonRow"
        android:layout_marginTop="@dimen/calculatorPaddingTop">

        <Button
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick" />

        <Button
            android:id="@+id/zero"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/_0" />

        <Button
            android:id="@+id/dot"
            style="@style/lighterButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:layout_marginRight="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/decimal" />



        <Button
            android:id="@+id/plus"
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick"
            android:text="@string/plus" />

        <Button
            style="@style/darkerButtonLargerInRow"
            android:layout_marginLeft="@dimen/calculatorButtonMargin"
            android:onClick="onButtonClick" />

    </LinearLayout>


</LinearLayout>
